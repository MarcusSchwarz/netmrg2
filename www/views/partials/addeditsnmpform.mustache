<h1 class="page-header">{{actiontext}}</h1>
<form class="form-horizontal" role="form" method="post" action="{{#route}}{{actionroute}}{{/route}}">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="name" id="name" placeholder="Name" value="{{snmp.name}}">
        </div>
    </div>
    <div class="form-group">
        <label for="oid" class="col-sm-2 control-label">OID</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="oid" id="oid" placeholder="SNMP OID" value="{{snmp.oid}}">
        </div>
    </div>
    <div class="form-group">
        <label for="dev_type" class="col-sm-2 control-label">For use with this device</label>
        <div class="col-sm-10">
            <select name="dev_type" class="form-control" id="dev_type">
                {{#devices}}
                    <option value="{{id}}" {{selected}}>{{name}}</option>
                {{/devices}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="type" class="col-sm-2 control-label">Type</label>
        <div class="col-sm-10">
            <select name="type" class="form-control" id="type">
                {{#types}}
                    <option value="{{id}}" {{selected}}>{{name}}</option>
                {{/types}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="subitem" class="col-sm-2 control-label">Item #</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="subitem" id="subitem" placeholder="Item #" value="{{snmp.subitem}}">
        </div>
    </div>
    <input type="hidden" name="csrftoken" value="{{csrftoken}}">
    <input type="hidden" name="id" value="{{snmp.id}}">
    <button class="btn btn-lg btn-primary btn-block" type="submit">{{actiontext}}</button>
</form>
<p class="text-center">
    <a href="#" onclick="history.back();return false;">Abort, go back</a>
</p>

