{{>settingsheader}}
            <h1 class="page-header">Settings - Users</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>[*] [0] [-]</th>
                <th>User ID</th>
                <th>Name</th>
                <th>Permissions</th>
                <th class="text-right"><a href="{{#route}}/settings/users/add{{/route}}">add</a></th>
            </tr>
        </thead>
        <tbody>
        {{#users}}
            <tr>
                <td>
                    <input type="checkbox" name="checkboxes[]">
                </td>
                <td>
                    {{user}}
                </td>
                <td>
                    {{fullname}}
                </td>
                <td>
                    {{permit}}
                </td>
                <td class="text-right">
                    <a href="{{#route}}/settings/users/edit?uid={{id}}{{/route}}" style="margin-right:10px;"><span class="glyphicon glyphicon-pencil" title="edit user"></span></a>
                    <a href="{{#route}}/settings/users/delete?uid={{id}}{{/route}}" data-csrftoken="{{csrftoken}}" data-confirmButton="Yes, delete" data-cancelButton="no" data-text="Do you really want to delete <strong>{{user}}</strong>?" data-okButtonClass="btn-danger" class="confirm"><span class="glyphicon glyphicon-remove alert-danger" title="delete user"></span></a>
                </td>
            </tr>
        {{/users}}
        </tbody>
    </table>
</div>

<script>
    $(".confirm").confirm({
        title: 'Confirmation',
        post: true
    });
</script>

{{>settingsfooter}}
